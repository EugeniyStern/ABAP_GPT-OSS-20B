<core:FragmentDefinition
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    
    <l:VerticalLayout
        id="verticalLayout"
        class="sapUiContentPadding"
        width="100%">
        <l:content>
            <ScrollContainer
                id="scrollContainer"
                width="100%"
                vertical="true"
                focusable="true">
                <List id="messageFeed"
                    items="{messages>/messages}"
                    headerText="Messages"
                    updateFinished="onMessageListUpdateFinished">
                    <FeedListItem
                        sender="{messages>sender}"
                        timestamp="{messages>timestamp}"
                        text="{messages>text}"
                        icon="{messages>icon}"
                        convertLinksToAnchorTags="All"
                        actions="{path: 'messages>Actions', templateShareable: false}">
                        <FeedListItemAction text="{messages>Text}" key="{messages>Key}"
                            press="onActionPressed" />
                    </FeedListItem>
                </List>
            </ScrollContainer>
            <Toolbar height="100%">
                <TextArea
                    id="messageInput"
                    placeholder="Введите сообщение..."
                    width="100%"
                    rows="4"
                    growing="true"
                    growingMaxLines="8" />
                <Button
                    icon="sap-icon://paper-plane"
                    press="onSendMessage"
                    type="Emphasized"
                    tooltip="Отправить сообщение" />
            </Toolbar>
        </l:content>
    </l:VerticalLayout>
    
</core:FragmentDefinition>
